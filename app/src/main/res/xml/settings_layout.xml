<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="general_category"
        app:title="General">

        <ListPreference
            app:key="general_theme"
            app:title="Theme"
            app:entries="@array/theme_list"
            app:entryValues="@array/theme_list"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">

        <Preference
            app:key="notification_tone"
            app:title="Notification tone"/>

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable message notifications"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="sync_category"
        app:title="Sync">

        <SwitchPreferenceCompat
            app:key="Sync_data"
            app:title="Sync data periodically"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="help_category"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback"/>

    </PreferenceCategory>


</PreferenceScreen>